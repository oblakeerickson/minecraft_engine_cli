#!/usr/bin/env ruby

require 'minecraft_engine_cli'

@cli = MinecraftEngineCLI.new

command = ARGV[0]
if !command || command == ""
  puts "Please provide a command"
end

case command
when "ls"
  @cli.list_servers
when "backups"
  @cli.list_backups
else
  puts "I haven't learned that command yet"
end
